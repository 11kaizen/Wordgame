<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/Yellow">

     <EditText
        android:id="@+id/Input"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/Clue"
        android:textAlignment="center"
        android:textSize="25sp"

        />

     <Button
        android:id="@+id/Submit"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="@string/My_Button"
        android:background="@color/Ocean_Deep"
        android:textColor="@color/White"
        android:onClick="Check_Answer"

       />

     <TextView
         android:id="@+id/Display"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:hint="@string/Disp"
         android:textAlignment="center"
         android:textAllCaps="true"
         android:textColorHint="@color/TextView_Color"
         android:textSize="20sp"
         android:fontFamily="@font/milkcocoa"
         android:paddingTop="30dp"/>

</LinearLayout>